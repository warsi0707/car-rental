generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                             Int @id @default(autoincrement())
  name                           String
  email                          String
  password                       String
  isAdmin                        Boolean @default(false)
  bookings                       Booking[]
}

model Car {
  id                            Int @id @default(autoincrement())
  name                          String
  content                       String
  brand                         String
  modelYear                     Int
  pricePerDay                   Float
  image                         String
  available                     Boolean @default(true)
  bookings                      Booking[]
}

model Booking {
  id                           Int @id @default(autoincrement())

  userId                       Int
  user                         User @relation(fields: [userId], references: [id])

  carId                        Int
  car                          Car @relation(fields: [carId], references: [id])

  startDate                    DateTime
  endDate                      DateTime
  totalCost                    Float

  createdAt                   DateTime @default(now())
}